#include <iostream>

using namespace std;

int main()
{
    char z='A';
    int x;
    cin>>x;
    for(int i=0;i<x;i++)
    {
        for(int j=i;j<x-1;j++)
        {
            cout<<" ";
        }
        z='A';
        for(int j=0;j<=i*2;j++)
        {
            cout<<z;
            if(j<i)z++;
            else z--;
        }
        cout<<endl;
    }
    return 0;
}
