#include <iostream>
using namespace std;
int main()
{ int x=0;
    int  macierz[10][10];
    for(int i=0;i<10;i++)
    {
        for(int j=0;j<10;j++)
        {
            if(j==9-i)
            {
                macierz[i][j]=i;
                x+=i;
            }
            else macierz[i][j]=0;
            cout<<macierz[i][j];
        }
        cout<<endl;
    }
    cout<<x;
}
