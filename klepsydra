#include <iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    string gwiazdy="";
    for(int i=0;i<n;i++)
    {
        gwiazdy+='*';
    }
    for(int i=0,j=n-1;i<=n;i++,j--)
    {
        if(i!=n/2)cout<<gwiazdy<<endl;
        if(i<n/2)
        {
            gwiazdy[i]=' ';
            gwiazdy[j]=' ';
        }
        else
        {
            gwiazdy[i]='*';
            gwiazdy[j]='*';
        }
    }
}
